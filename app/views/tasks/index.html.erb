<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Tasks</h1>
    <%= link_to "Add New Task", new_task_path, class: "btn btn-primary" %>
  </div>

  <div class="card">
    <ul class="list-group list-group-flush">
      <% @tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <%= check_box_tag "task_#{task.id}", nil, task.completed, class: "form-check-input me-2" %>
            <div>
              <%= link_to task.title, task_path(task), class: "fw-bold text-decoration-none" %>
              <small class="d-block text-muted"><%= task.details %></small>
              <span class="badge <%= task.completed ? 'bg-success' : 'bg-warning' %> me-2">
                <%= task.completed ? 'Completed' : 'Not Completed' %>
              </span>
            </div>
          </div>
          <div class="btn-group" role="group">
            <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Delete", task_path(task), 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" }, 
                class: "btn btn-sm btn-outline-danger" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>